<%= simple_form_for [@photo_gallery, @photo_gallery.photos.build],  html: { class: "photo-gallery form" }  do |f| %>
  <%= f.input :name, input_html: { autofocus: true } %>
  <%= f.input :description %>
  <%= f.input :shooting_date %>
  <%= f.input :image %>
  <%= link_to "Cancel", photo_gallery_photos_path(@photo_gallery), class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>